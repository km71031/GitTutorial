#kivy 1.9.1

#<Root>:
 #   size: 1800, 500

<Mole>:
    size: 50, 50

    canvas:
        Color:
            rgb: 1, 0, 0
        Rectangle:
            pos:self.pos
            size:self.size

<Hammer>:
    size: 30, 30

    canvas:
        Color:
            rgb: 0, 1, 0
        Rectangle:
            pos:self.pos
            size:self.size



<MoleGame>:
    mole: zzplayer1
    hammer: weapon

    #canvas:
     #   Rectangle:
      #      pos: self.center_x-5, 0
       #     size: 10, self.height

    Label:
        font_size: 20
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.mole.score)

    Label:
        font_size: 20
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.mole.time)

    Mole:
        id: zzplayer1
        center: self.center
        #x: root.x
        #center_y: root.center_y

    Hammer:
        id: weapon
        center: self.center
