#kivy 1.9.1

<Trash>:
    size: 10, 10
    canvas:
        Color:
            rgb: 1, 0, 0
        Ellipse:
            pos:self.pos
            size:self.size
<TrashCan>:
    size: 10, self.hakoheight
    canvas:
        Color:
            rgb: 1, 1, 0, .5
        #Line:
         #   points: [self.x, self.y, self.x, self.y+200]
          #  width: 10
        Rectangle:
            pos:self.pos
            size:self.size
<TrashCan3>:
    size: self.hakowidth, 10
    canvas:
        Color:
            rgb: 1, 1, 0, .5
        Rectangle:
            pos:self.pos
            size:self.size


<Throw>:
    gomi: trash
    hako1: trashcan1
    hako2: trashcan2
    hako3: trashcan3

    #canvas:
     #   Rectangle:
      #      pos: self.center_x-5, 0
       #     size: 10, self.height

    Label:
        font_size: 20
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.hako1.x)

    Label:
        font_size: 20
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.gomi.y)

    Trash:
        id: trash
        center: self.center
        #x: root.x
        #center_y: root.center_y

    TrashCan:
        id: trashcan1
        center: self.center

    TrashCan:
        id: trashcan2
        center: self.center

    TrashCan3:
        id: trashcan3
        center: self.center